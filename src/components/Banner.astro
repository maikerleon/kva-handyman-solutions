---
import Menu from '#components/Menu.astro';
import Button from '#components/Button.astro'
import Circle from '#components/Circle.astro'
---

<section class="w-full min-h-screen bg-[url(img/banner.webp)] h-full bg-no-repeat bg-cover bg-center relative">
    <div class="min-h-full bg-white/60 absolute w-[55%] top-0"></div>
    <div class="max-w-[92%] mx-auto justify-center relative min-h-fit">
        <Menu />
        <div class="flex items-center">
            <div class="w-1/2 animate-fade-right animate-normal animate-ease-in-out">
                <div class="flex flex-col gap-y-4 mt-20 max-w-[500px]">
                    <span class="uppercase text-gray-700 tracking-[6px] text-lg font-semibold ml-0.5">
                        Available Always for You
                    </span>
                    <h1 class="text-5xl tracking-tight capitalize font-semibold text-kva-900">Prime Home Solutions</h1>
                    <p class="text-gray-700 text-lg ml-0.5">
                        Available to work in your home with any of our home repair services: from water fixtures and emergencies to TV mounting, lighting upgrades and more.
                    </p>
                    <Button text="Book your schedule" link='/' styles="capitalize ml-0.5 mt-5" />
                </div>
            </div>
            <div>
                <Circle />
            </div>
        </div>
        <div class="w-full flex justify-center mt-20 animate-zoom">
            <aside class="grid grid-cols-2 bg-kva-900 px-14 py-8 text-white items-center shadow-lg animate-fade animate-normal animate-ease-in-out">
                <div class="space-y-6 max-w-[80%]">
                    <h2 class="capitalize text-3xl font-bold">Complete Handyman Solutions</h2>
                    <p class="text-gray-200 text-base text-pretty">Comprehensive handyman services for all your home repair and improvement needs. Efficient and reliable.</p>
                </div>
                <div class="grid grid-cols-2 justify-center items-center gap-4">
                    <div>
                        <span class="text-4xl font-bold">10+</span>
                        <h3 class="text-base">Years experience</h3>
                    </div>
                    <div>
                        <span class="text-4xl font-bold">100</span>
                        <h3 class="text-base">Completed projects</h3>
                    </div>
                    <div>
                        <span class="text-4xl font-bold">50</span>
                        <h3 class="text-base">Satisfied customers</h3>
                    </div>
                    <div>
                        <span class="text-4xl font-bold">35+</span>
                        <h3 class="text-base">Handyman services</h3>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>