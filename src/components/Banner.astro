---
import Menu from '#components/Menu.astro';
import Button from '#components/Button.astro'
import Circle from '#components/Circle.astro'
---

<section class="w-full min-h-screen bg-[url(img/banner.webp)] h-full bg-no-repeat bg-cover bg-center relative">
    <div class="min-h-full bg-white/60 absolute w-[55%] top-0"></div>
    <div class="max-w-[92%] mx-auto justify-center relative min-h-fit">
        <Menu />
        <div class="flex items-center">
            <div class="w-1/2">
                <div class="flex flex-col gap-y-4 mt-20 max-w-md">
                    <span class="uppercase text-gray-700 tracking-[6px] text-lg font-semibold ml-0.5">
                        Best homefix company
                    </span>
                    <h1 class="text-6xl tracking-tight capitalize font-semibold text-kva-900">Professional and quality services</h1>
                    <p class="text-gray-800 text-base ml-0.5">
                        Mauris finibus quam et leo luctus finibus. In convallis libero et diam dictum, ut scelerisque sem mollis.
                    </p>
                    <Button text="Book your schedule" link='/' styles="capitalize ml-0.5" />
                </div>
            </div>
            <div>
                <Circle />
            </div>
        </div>
        <div class="w-full flex justify-center mt-20">
            <aside class="grid grid-cols-2 bg-kva-900 px-14 py-8 text-white items-center shadow-lg">
                <div class="space-y-6 max-w-[80%]">
                    <h2 class="capitalize text-3xl font-bold">One stop handyman service</h2>
                    <p class="text-gray-200 text-sm">Mauris finibus quam et leo luctus finibus. In convallis libero diamlao mauris dictum.</p>
                </div>
                <div class="grid grid-cols-2 justify-center items-center gap-4">
                    <div>
                        <span class="text-3xl font-bold">34+</span>
                        <h3 class="text-sm">Years Business</h3>
                    </div>
                    <div>
                        <span class="text-3xl font-bold">5150</span>
                        <h3 class="text-sm">Projects Achivements</h3>
                    </div>
                    <div>
                        <span class="text-3xl font-bold">26K</span>
                        <h3 class="text-sm">Valuable Customers</h3>
                    </div>
                    <div>
                        <span class="text-3xl font-bold">15+</span>
                        <h3 class="text-sm">No. of Branches</h3>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>