---
import {data, services} from '#lib/data.ts'
import Button from '#components/Button.astro'
import PhoneIcon from '#icons/PhoneIcon.astro'
import EmailIcon from '#icons/EmailIcon.astro'
import CardImage from './CardImage.astro'
---
<section class="text-gray-600">
    <div class="md:px-16 px-6 pt-28 pb-14 bg-no-repeat bg-cover bg-center" style="background-image: url('img/background-section.webp');">
        <header class="flex items-center gap-x-36 animate-slide-left md:mb-0 mb-10">
            <div class="md:w-5/6 flex flex-col gap-y-8">
                <h1 class="text-2xl uppercase font-semibold tracking-[3px]">About us</h1>
                <span class="text-3xl md:text-4xl tracking-[2.5px] md:text-balance">
                    Transform Your Home with Exceptional Services: <b class="text-4xl md:text-6xl text-kva-500 font-bold">Repairs, Plumbing, Electrical Work, and More,</b> All Tailored to Your Budget.
                </span>
            </div>
        </header>
        <div class="custom-grid md:p-5 p-1" id="services">
            {
                services.map(service => (
                    <CardImage serviceData={service} />
                ))
            }
        </div>
    </div>
    
    <aside class="flex bg-slate-800 text-white justify-between px-6 md:px-12 py-6 items-center flex-col md:flex-row md:gap-0 gap-5">
        <div class="flex items-center gap-x-4 md:gap-x-8 animate-slide-left-mini flex-col md:flex-row">
            <span class="flex items-center md:gap-x-2 gap-x-1">
                <PhoneIcon styles="w-9" />
                <strong class="text-base md:text-lg font-normal">{data.phoneFormat}</strong>
            </span>
            <div class="h-10 w-0.5 bg-white hidden md:flex"></div>
            <span class="flex items-center md:gap-x-2 gap-x-1">
                <EmailIcon styles="w-9" />
                <strong class="text-base md:text-lg font-normal">{data.email}</strong>
            </span>
        </div>
        <div class="flex items-center animate-slide-right-mini flex-col md:flex-row md:gap-8 gap-5 w-fit">
            <div class="h-0.5 bg-kva-500 w-40"></div>
            <strong class="text-2xl font-semibold">Quote Your First Service today!</strong>
            <Button text="Quote now" link=`mailto:${data.email}?subject=Free Quote KVA&body=Hello,%20I%20need%20to%20make%20a%20quote%20for%20my%20home,%20I%20need%20to%20make:` linkPhone=`sms:${data.phone}?body=Hello,%20I%20need%20to%20make%20a%20quote%20for%20my%20home,%20I%20need%20to%20make:` />
        </div>
    </aside>
</section>

<style>
    :global(.custom-grid) {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(13, 70px);
        grid-column-gap: 40px;
        grid-row-gap: 40px;
    }

    :global(.custom-grid > div:nth-child(1)) { grid-area: 2 / 1 / 7 / 2; }
    :global(.custom-grid > div:nth-child(2)) { grid-area: 4 / 2 / 7 / 3; }
    :global(.custom-grid > div:nth-child(3)) { grid-area: 3 / 3 / 7 / 4; }
    :global(.custom-grid > div:nth-child(4)) { grid-area: 1 / 4 / 4 / 5; }
    :global(.custom-grid > div:nth-child(5)) { grid-area: 4 / 4 / 7 / 5; }
    :global(.custom-grid > div:nth-child(6)) { grid-area: 7 / 1 / 10 / 3; }
    :global(.custom-grid > div:nth-child(7)) { grid-area: 7 / 3 / 12 / 4; }
    :global(.custom-grid > div:nth-child(8)) { grid-area: 7 / 4 / 10 / 5; }
    :global(.custom-grid > div:nth-child(9)) { grid-area: 10 / 1 / 14 / 2; }
    :global(.custom-grid > div:nth-child(10)) { grid-area: 10 / 2 / 12 / 3; }
    :global(.custom-grid > div:nth-child(11)) { grid-area: 12 / 2 / 14 / 3; }
    :global(.custom-grid > div:nth-child(12)) { grid-area: 10 / 4 / 12 / 5; }
    :global(.custom-grid > div:nth-child(13)) { grid-area: 12 / 3 / 14 / 5; }

    @media only screen and (max-width: 600px) {
        :global(.custom-grid) {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(7, 200px);
            grid-column-gap: 10px;
            grid-row-gap: 10px;
        }

        :global(.custom-grid > div:nth-child(1)) { grid-area: 1 / 1 / 2 / 2; }
        :global(.custom-grid > div:nth-child(2)) { grid-area: 1 / 2 / 2 / 3; }
        :global(.custom-grid > div:nth-child(3)) { grid-area: 2 / 1 / 3 / 2; }
        :global(.custom-grid > div:nth-child(4)) { grid-area: 2 / 2 / 3 / 3; }
        :global(.custom-grid > div:nth-child(5)) { grid-area: 3 / 1 / 4 / 2; }
        :global(.custom-grid > div:nth-child(6)) { grid-area: 3 / 2 / 4 / 3; }
        :global(.custom-grid > div:nth-child(7)) { grid-area: 4 / 1 / 5 / 2; }
        :global(.custom-grid > div:nth-child(8)) { grid-area: 4 / 2 / 5 / 3; }
        :global(.custom-grid > div:nth-child(9)) { grid-area: 5 / 1 / 6 / 2; }
        :global(.custom-grid > div:nth-child(10)) { grid-area: 5 / 2 / 6 / 3; }
        :global(.custom-grid > div:nth-child(11)) { grid-area: 6 / 1 / 7 / 2; }
        :global(.custom-grid > div:nth-child(12)) { grid-area: 6 / 2 / 7 / 3; }
        :global(.custom-grid > div:nth-child(13)) { grid-area: 7 / 1 / 8 / 3; }
    }
</style>